<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/etext"
        android:text=""
        android:textSize="55sp"
        android:padding="18dp"
        android:layout_marginBottom="550dp"
        android:textColor="#333399"
        android:inputType="number"
        android:backgroundTint="#F0F8FF"
        android:textStyle="bold"
        android:maxLength="11"
        />

    <Button
        android:id="@+id/Ac"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="250dp"
        android:text="Ac"
        android:textColor="#0018A8"
        android:textSize="50dp"
        android:textStyle="bold"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lerase"
        android:layout_marginTop="250dp"
        android:text="&lt;"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/Ac"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:layout_marginTop="250dp"
        android:text="/"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/lerase"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:layout_marginTop="250dp"
        android:text="*"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/divide"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:text="7"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/Ac"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eight"
        android:text="8"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/seven"
        android:layout_below="@id/lerase"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine"
        android:text="9"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/eight"
        android:layout_below="@id/divide"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:text="4"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/seven"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/five"
        android:text="5"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/eight"
        android:layout_toRightOf="@id/four"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/six"
        android:text="6"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/eight"
        android:layout_toRightOf="@id/five"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:text="1"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/four"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:text="2"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/five"
        android:layout_toRightOf="@id/one"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:text="3"
        android:textSize="50dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_below="@id/five"
        android:layout_toRightOf="@id/two"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        android:text="-"
        android:textSize="45dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/nine"
        android:layout_below="@id/multiply"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:text="+"
        android:textSize="45dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/six"
        android:layout_below="@id/minus"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_alignBottom="@id/three"
        android:translationY="-40dp"
        />

    <Button
        android:id="@+id/zero"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:layout_alignLeft="@id/one"
        android:layout_alignRight="@id/two"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8dp"
        android:text="0"
        android:textColor="#0018A8"
        android:textSize="30dp"
        android:textStyle="bold"
        android:translationY="-40dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot"
        android:text="."
        android:textSize="22dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/zero"
        android:layout_below="@id/three"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_alignBottom="@id/zero"
        android:layout_alignRight="@id/three"
        android:translationY="-40dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        android:text="="
        android:textSize="22dp"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:textColor="#0018A8"
        android:textStyle="bold"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/plus"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_alignBottom="@id/zero"
        android:translationY="-40dp"
        />

</RelativeLayout>